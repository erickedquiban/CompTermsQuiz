<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backblue"
    tools:context=".FeedbackActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:textSize="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What can you say about the Application?"
        android:textStyle="italic"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="100dp"
        android:text="Do you have any Suggestion?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="100dp"
        android:text="Marks:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="italic" />


    <EditText
        android:id="@+id/editText_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@id/textView"
        android:layout_marginStart="-379dp"
        android:layout_marginLeft="-379dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView" />

    <EditText
        android:id="@+id/editText_surname"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginStart="-279dp"

        android:layout_marginLeft="-279dp"
        android:layout_marginTop="150dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2" />

    <EditText
        android:id="@+id/editText_mark"
        android:layout_width="104dp"
        android:layout_height="58dp"

        android:layout_below="@+id/editText_surname"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText_mark"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="89dp"
        android:background="@drawable/blue"
        android:text="Submit" />

    <Button
        android:id="@+id/button_viewall"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button_add"
        android:layout_marginTop="26dp"
        android:background="@drawable/blue"
        android:text="View Feedback" />

</RelativeLayout>