<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/taba"
    tools:context=".CompActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/idImageView"
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/john" />

        <TextView
            android:id="@+id/idTextView"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:layout_below="@+id/idImageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="serif-monospace"
            android:text="The monitor works with a video card, located inside the computer case, to display images and text on the screen."
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_marginTop="15dp"
            android:verticalScrollbarPosition="defaultPosition"
            android:orientation="horizontal"
            android:layout_below="@+id/idTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/star"
                    android:onClick="ShowPopupsetting"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Features"
                    android:textSize="10sp"
                    android:textColor="#ffffff"/>
            </LinearLayout>



        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="69dp"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:background="@drawable/idea"
                android:onClick="ShowPopuptutorial"
                android:textColor="#ffffff" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="10sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:background="@drawable/undercomputer"
            android:onClick="ShowPopupdev"
            android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer"
                android:textSize="10sp"
                android:textColor="#ffffff"/>
            </LinearLayout>
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

        <Button
            android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-1dp"
            android:background="@drawable/share1"
            android:contentDescription="Setting"
            android:onClick="ShowPopup"
            android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share/Feedback"
                android:textSize="10sp"
                android:textColor="#ffffff"/>
        </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>