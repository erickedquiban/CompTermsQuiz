<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="400dp"
    android:background="#66000000"
    android:padding="5dp"

    android:layout_gravity="center">
    <TextView
        android:id="@+id/txtclose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:background="#ff3300"
        android:gravity="center"

        android:text="Close"
        android:textColor="#ffebe6"
        android:textStyle="bold"
        tools:text="X" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Features"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="282dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/taba" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="148dp"
            android:layout_height="98dp"
            android:background="@drawable/website1"
            android:onClick="btnClick2"
            android:text="150"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/idbtn2"
            android:background="@drawable/taba"
            android:fontFamily="serif-monospace"
            android:gravity="center"

            android:text="AICS Website"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="85dp"
            android:background="@drawable/nasapng"
            android:text="150"
            android:onClick="btnClick1"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/idbtn1"
            android:layout_width="282dp"
            android:layout_height="50dp"
android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/taba"
            android:fontFamily="serif-monospace"

            android:text="NASA"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>

  


</LinearLayout>